<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
	</thead>
	<tbody>
  <% @books.each do |book| %>
		<tr>
			<td>
      <td><%= book.title %></td>
      <span></span>
</td>
<th><%=book.body%></th>
<td>
<%=link_to"show",book_path(book)%>
</td>
<td>
  <%=link_to"Edit",edit_book_path(book) %>
</td>
<td>
	<%= link_to "Destroy", book_path(book), method: :delete,"data-confirm"=>"Are you sure?" %>


</td>

</tr>
<% end %>
	</tbody>
</table>
<h3>New book</h3>

<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book) do |f| %>

 
    
    <h5>Title</h5>
    <%= f.text_field :title %>
 
    <h5>Body</h5>
    <%= f.text_area :body %>
 
    <%= f.submit 'Create Book'=>"Book was successfully created" %>

<% end %>